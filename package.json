    "@agent-poker/agent-sdk": "workspace:*",
    "@agent-poker/game-server": "workspace:*",
    "@agent-poker/hand-history": "workspace:*",
    "@agent-poker/lobby-api": "workspace:*",
    "@agent-poker/poker-engine": "workspace:*",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "tsx": "^4.19.0"
  }
